<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text"/>

    <style name="Text.Bold" parent="Text">
        <item name="fontFamily">@font/aeonik_pro_bold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>


    <style name="one_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeBottomLeft">50%</item>
        <item name="cornerSizeTopRight">50%</item>
        <item name="cornerSizeBottomRight">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_10sdp</item>
    </style>
    <style name="style_item_title_tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="Them.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Custom_Dialog" parent="Them.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
</resources>